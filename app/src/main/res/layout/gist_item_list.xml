<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/recyclerViewGistList"
            android:name="br.com.marcoporcho.netshoesgistchallenge.use_cases.list_gists.ui.GistListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            tools:context=".use_cases.list_gists.ui.GistListFragment"
            tools:listitem="@layout/gist_list_item_content" />
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="32dp"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        android:text="@string/gist_no_data" />

        <ProgressBar
            android:id="@+id/listProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />





</LinearLayout>